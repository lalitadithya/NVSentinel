apiVersion: eksctl.io/v1alpha5
kind: ClusterConfig

metadata:
  name: ${CLUSTER_NAME}
  region: ${AWS_REGION}
  version: "${K8S_VERSION}"
  tags:
    Environment: uat
    Project: nvsentinel
    ManagedBy: eksctl

autoModeConfig:
  enabled: false

iam:
  withOIDC: true
  serviceAccounts:
  - metadata:
      name: nvsentinel-janitor
      namespace: nvsentinel
    attachPolicyARNs:
    - arn:aws:iam::aws:policy/AmazonEC2ReadOnlyAccess
    attachPolicy:
      Version: "2012-10-17"
      Statement:
      - Effect: Allow
        Action:
        - ec2:RebootInstances
        Resource: "*"
    roleName: ${CLUSTER_NAME}-janitor
    roleOnly: true

addons:
  - name: aws-ebs-csi-driver

managedNodeGroups:
  - name: system-nodes
    instanceType: ${CPU_NODE_TYPE}
    desiredCapacity: ${CPU_NODE_COUNT}
    minSize: ${CPU_NODE_COUNT}
    maxSize: ${CPU_NODE_COUNT}
    volumeSize: 200
    volumeType: gp3
    privateNetworking: true
    amiFamily: Ubuntu2404
    labels:
      workload-type: system
    tags:
      Name: ${CLUSTER_NAME}-system-node
    iam:
      withAddonPolicies:
        ebs: true
