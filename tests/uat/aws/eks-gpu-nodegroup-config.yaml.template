apiVersion: eksctl.io/v1alpha5
kind: ClusterConfig

metadata:
  name: ${CLUSTER_NAME}
  region: ${AWS_REGION}

managedNodeGroups:
  - name: gpu-nodes
    instanceType: ${GPU_NODE_TYPE}
    desiredCapacity: ${GPU_NODE_COUNT}
    minSize: ${GPU_NODE_COUNT}
    maxSize: ${GPU_NODE_COUNT}
    volumeSize: 200
    volumeType: gp3
    privateNetworking: true
    amiFamily: Ubuntu2404
    subnets:
      - ${GPU_SUBNET_ID}
    labels:
      workload-type: gpu
    tags:
      Name: ${CLUSTER_NAME}-gpu-node
    iam:
      withAddonPolicies:
        ebs: true
    capacityReservation:
      capacityReservationTarget:
        capacityReservationID: ${CAPACITY_RESERVATION_ID}
